@model Dziennik.Models.Scheduling.CreateRecurringEvent

@{
	ViewBag.Title = "title";
	Layout        = "_Layout";
}

<h1>Create</h1>

<h4>RecurringEvent</h4>
<hr/>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ScheduleId"/>
			<input type="hidden" asp-for="Event.Id"/>
			<div class="form-group">
				<label asp-for="Event.DayOfWeek" class="control-label"></label>
				<select asp-for="Event.DayOfWeek" class="form-control">
					@foreach (DayOfWeek dayOfWeek in Enum.GetValues(typeof(DayOfWeek)))
					{
						<option value="@dayOfWeek">@dayOfWeek.ToString()</option>
					}
				</select>
				<span asp-validation-for="Event.DayOfWeek" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Event.StartTime" class="control-label"></label>
				<input type="time" asp-for="Event.StartTime" class="form-control"/>
				<span asp-validation-for="Event.StartTime" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Event.EndTime" class="control-label"></label>
				<input type="time" asp-for="Event.EndTime" class="form-control"/>
				<span asp-validation-for="Event.EndTime" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>