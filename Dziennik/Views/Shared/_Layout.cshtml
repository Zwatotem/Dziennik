@using Microsoft.AspNetCore.Identity
@using Dziennik.Data
@using Dziennik.Linq
@using Dziennik.Models.Roles
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.EntityFrameworkCore
@inject UserManager<User>               UserManager
@inject SignInManager<User>             SignInManager
@inject ApplicationDbContext            DbContext
@{
	var      user = UserManager.GetUserAsync(User).Result;
	Student? roleAsStudent = null;
	if (user != null)
	{
		user          = DbContext.Users.Include(user => user.Roles).Find(user.Id);
		roleAsStudent = user.Roles.OfType<Student>().FirstOrDefault();
	}
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<title>@ViewData["Title"] - Dziennik</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
	<link rel="stylesheet" href="~/Dziennik.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
	<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
		<div class="container-fluid">
			<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dziennik</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav flex-grow-1">
					@if (Context.User.IsInRole("Student"))
					{
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Marks" asp-action="ByStudent" asp-route-studentId="@roleAsStudent.Id">Marks</a>
						</li>
					}
					@if (Context.User.IsInRole("Admin"))
					{
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Overview" asp-action="Index">User Management</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="CoursePrograms" asp-action="Index">Course Programs</a>
						</li>
					}
					@if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Teacher"))
					{
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Groups" asp-action="Index">Groups</a>
						</li>
					}
					@if (Context.User != null)
					{
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="Index">Courses</a>
					</li>
						
					}
				</ul>
				<partial name="_LoginPartial"/>
			</div>
		</div>
	</nav>
</header>
<div class="container">
	<main role="main" class="pb-3">
		@RenderBody()
	</main>
</div>

<footer class="border-top footer text-muted">
	<div class="container">
		&copy; 2023-2024 - Dziennik - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>