@using Dziennik.Models.Roles
@model Dziennik.Models.CreateCourseProgram

@{
	ViewData["Title"] = "Create";
	Layout            = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CourseProgram</h4>
<hr/>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DidacticLevel" class="control-label"></label>
				<select asp-for="DidacticLevel" class="form-control">
					@foreach (DidacticLevel dl in ViewBag.DidacticLevels)
					{
						<option value="@dl">@dl.ToString()</option>
					}
				</select>
				<span asp-validation-for="DidacticLevel" class="text-danger"></span>
			</div>
			<div class="form-group">
				<select asp-for="DedicatedTeachers" id="teacherDropdown" multiple>
					@foreach (Teacher teacher in ViewBag.Teachers)
					{
						<option value="@teacher">@teacher.Owner.ShortName</option>
					}
				</select>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>