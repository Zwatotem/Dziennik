@model IEnumerable<Dziennik.Models.User>
@{
	Layout                 = "/Views/UserManagement/_Layout.cshtml";
	ViewData["Title"]      = "Manage existing users";
	ViewData["ActivePage"] = "Index";
}

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Manage existing users</h1>
			<hr/>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<table class="table table-striped">
			<thead>
			<tr>
				<th>Name</th>
				<th>Username</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>@string.Join(" ", user.Names.Append(user.Surname))</td>
					<td>@user.UserName</td>
					<td>@user.Email</td>
					<td>
						@foreach (var role in user.Roles)
						{
							<span class="badge badge-primary">@role.Name</span>
						}
					</td>
					<td>
						<a asp-controller="Overview" asp-action="Edit" asp-route-userId="@user.Id" class="btn btn-primary">Edit</a>
						<a asp-controller="Overview" asp-action="Delete" asp-route-userId="@user.Id" class="btn btn-danger">Delete</a>
					</td>
				</tr>
			}
			</tbody>
		</table>
	</div>
</div>