@model Dziennik.Models.Course

@{
	ViewData["Title"] = "Details";
	Layout            = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
	<h4>Course</h4>
	<hr/>
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Program.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Program.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Program.DidacticLevel)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Program.DidacticLevel)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Teacher)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Teacher.Owner.ShortName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Group)
		</dt>
		<dd class="col-sm-10">
