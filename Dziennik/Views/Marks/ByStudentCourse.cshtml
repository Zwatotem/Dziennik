@model IEnumerable<Dziennik.Models.Scoring.Mark>

@{
	ViewData["Title"] = $"Marks for {ViewBag.StudentName}";
	Layout            = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
	<thead>
	<tr>
		<th>@Html.DisplayNameFor(model => model.Issuer)</th>
		<th>@Html.DisplayNameFor(model => model.Reciever)</th>
		<th>@Html.DisplayNameFor(model => model.ClassTask)</th>
		<th>@Html.DisplayNameFor(model => model.Value)</th>
		<th>@Html.DisplayNameFor(model => model.ClassTask.Weight)</th>
		<th>@Html.DisplayNameFor(model => model.Date)</th>
		<th>@Html.DisplayNameFor(model => model.ClassTask.Course /*.Program.Description*/)</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@Html.DisplayFor(model => item.Issuer.Owner.ShortName)</td>
			<td>@Html.DisplayFor(model => item.Reciever.Owner.ShortName)</td>
			<td>@Html.DisplayFor(model => item.ClassTask.Description)</td>
			<td>@Html.DisplayFor(model => item.Value)</td>
			<td>@Html.DisplayFor(model => item.ClassTask.Weight)</td>
			<td>@Html.DisplayFor(model => item.Date)</td>
			<td>@Html.DisplayFor(model => item.ClassTask.Course.Program.Description)</td>
		</tr>
	}
	</tbody>
</table>